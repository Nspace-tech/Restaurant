    <header id="header">
      <div class="container">
            <h3>Manage Gallery Page</h3>
      </div>
    </header>

    <section id="breadcrumb">
      <div class="container">
        <ol class="breadcrumb">
          <li class="active">Gallery</li>
        </ol>
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="list-group">
              <a href="dashboard" class="list-group-item main-color-bg">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
              </a>
              <a href="menu" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Menu </a>
              <a href="reservation" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Reservation </a>
              <a href="gallery" class="list-group-item active"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Gallery </a>
              <a href="about" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> About </a>
              <a href="blog" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Blog </a>
              <a href="contact" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Contact </a>
            </div>
            <div class="well">
              <h4>Disk Space Used</h4>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                  60%
                </div>
              </div>
              <h4>Bandwith Used</h4>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                    25%
                  </div>
                </div>
            </div>
          </div>
          <div class="col-md-9">
            <!-- Website Overview-->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Gallery</h3>
              </div>
              <div class="panel-body">
                <form action="/gallery" enctype="multipart/form-data" method="POST">
                    <div class="row">
                        <div class="col-lg-4"><input type="file" name="myGallery" accept="image/*" required/></div>
                        <div class="col-lg-4">
                          <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Choose Category</span>
                            <select name="category" class="form-control" required>
                              <option value="" selected>choose...</option>
                              <option value="Interior">Interior</option>
                              <option value="Food">Food</option>
                              <option value="Events">Events</option>
                              <option value="Guests">VIP Guests</option>
                            </select>
                        </div>
                        </div>
                        <div class="col-lg-4">
                          <input type="submit" value="Submit" class="btn btn-primary" style="float: right;">
                        </div>
                    </div>
                </form>
              </div>
            </div>
            <!-- gallery display -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Gallery Display</h3>
                </div>
                <div class="panel-body">

                  <h3>Interior</h3><hr>
                  <div class="row">
                    <% allImages.forEach(function(image) { %>
                      <% if (image.category == 'Interior') {%>
                        <div class="col-lg-2">
                          <a href="/uploads/gallery/<%= image.filename%>"><img src="/uploads/gallery/<%= image.filename%>" width="100px" height="100px"></a>
                          <a href="/<%= image._id %>/deleteimage"><input type="submit" class="btn btn-danger" value="Delete" ></a>
                        </div>
                      <% } %>     
                    <% }); %>
                  </div>

                  <h3>Food</h3><hr>
                    <div class="row">
                      <% allImages.forEach(function(image) { %>
                        <% if (image.category == 'Food') {%>
                          <div class="col-lg-2">
                            <a href="/uploads/gallery/<%= image.filename%>"><img src="/uploads/gallery/<%= image.filename%>" width="100px" height="100px"></a>
                            <a href="/<%= image._id %>/deleteimage"><input type="submit" class="btn btn-danger" value="Delete" ></a>
                          </div>
                        <% } %>     
                      <% }); %>
                    </div>

                  <h3>Events</h3><hr>
                  <div class="row">
                    <% allImages.forEach(function(image) { %>
                      <% if (image.category == 'Events') {%>
                        <div class="col-lg-2">
                          <a href="/uploads/gallery/<%= image.filename%>"><img src="/uploads/gallery/<%= image.filename%>" width="100px" height="100px"></a>
                          <a href="/<%= image._id %>/deleteimage"><input type="submit" class="btn btn-danger" value="Delete" ></a>
                        </div>
                      <% } %>     
                    <% }); %>
                  </div>
                  
                  <h3>VIP Guests</h3><hr>
                    <div class="row">
                      <% allImages.forEach(function(image) { %>
                        <% if (image.category == 'Guests') {%>
                          <div class="col-lg-2">
                            <a href="/uploads/gallery/<%= image.filename%>"><img src="/uploads/gallery/<%= image.filename%>" width="100px" height="100px"></a>
                            <a href="/<%= image._id %>/deleteimage"><input type="submit" class="btn btn-danger" value="Delete" ></a>
                          </div>
                        <% } %>     
                      <% }); %>
                    </div>
                  
                </div>
              </div>

          </div>
        </div>
      </div>
    </section>

    <footer id="footer">
      <p>Copyright AdminStrap, &copy; 2017</p>
    </footer>
<!-- Modals -->

  <!-- Add Page -->
  <div class="modal fade" id="addPage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Page</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
                  <label>Page Title</label>
                  <input type="text" class="form-control" placeholder="Page Title">
                </div>
                <div class="form-group">
                  <label>Page Body</label>
                  <textarea name="editor1" class="form-control" placeholder="Page Body"></textarea>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> Published
                  </label>
                </div>
                <div class="form-group">
                  <label>Meta Tags</label>
                  <input type="text" class="form-control" placeholder="Add Some Tags...">
                </div>
                <div class="form-group">
                  <label>Meta Description</label>
                  <input type="text" class="form-control" placeholder="Add Meta Description...">
                </div>
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>

        <script>
            CKEDITOR.replace( 'editor1' );
        </script>
